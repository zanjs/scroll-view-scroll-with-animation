.scroll-container {
    overflow: hidden;
    width: 100%;
    height: 90rpx;
    white-space: nowrap;
}

.scroll-container .scroll-view {
    height: 90rpx;
    width: 100%;
}

.scroll-view .scroll-inline-container {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    height: 65rpx;
}

.scroll-view .scroll-item {
    height: 100%;
    margin-right: 77rpx;
    padding: 0 23rpx;
}

.scroll-item .item-container {
    height: 100%;
    color: rgb(34, 34, 34);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.item-container .name {
    font-size: 24rpx;
    width: 100%;
    text-align: center;
    height: 50rpx;
    display: flex;
    align-items: flex-end;
}

.item-container .line {
    width: 100%;
    height: 4rpx;
    background-color: rgb(34, 34, 34);
    margin: 3rpx auto 0 auto;
}

.item-container .active {
    font-size: 36rpx;
    font-weight: 600;
}